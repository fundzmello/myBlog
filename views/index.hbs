            <div class="carousel-inner" role="listbox">
              {{#each post}}
              {{!-- {{#if allowFeatured}} --}}
              {{#if @first}}
              <div class="carousel-item active">
                <p class="carouselTitle">{{this.postName}}</p>
                <img class="cImage" src="{{this.postImage}}" alt="First slide">
              </div>
              {{else}}
              <div class="carousel-item">
                <p class="carouselTitle">{{this.postName}}</p>
                <img class="cImage" src="{{this.postImage}}" alt="Second slide">
              </div>
              {{/if}}
              {{!-- {{/if}} --}}
              {{/each}}
            </div>
          </div>

        </div>
      </div>



      <div class="col-lg-4 ">
        <div class="d-flex justify-content-start ml-5">
          <form class="searchbar" action="/search" method="GET">
            <input class="search_input" type="search" name="q" placeholder="Search...">
            <div class="search_icon"><i class="fas fa-search"></i></div>
            <button class="btn btn-outline-primary my-2 my-sm-0" type="submit" style="display: none;">Search</button>
          </form>
        </div>


        <div class="featured-user ml-5 ">
          <h2 class="mb-4">Trending Posts</h3>
            <ul class="list-unstyled">

              {{#each post}}
              {{#if  (gte this.postComments.length 2)}}
              <li>
                <a href="/post/{{this.id}}" class="d-flex align-items-center">
                  <img src="{{this.postImage}}" style="height: 60px; width: 60px;" alt="Image" class="mr-3">
                  <div class="podcaster">
                    <p class="d-block h5">{{this.postName}}</p>
                    <span>{{this.postAuthor.firstName}} {{this.postAuthor.lastName}}</span>
                    <span>{{formatDate this.created_at 'MMMM Do YYYY, h:mm a'}}</span>
                  </div>
                </a>
              </li>
              {{/if}}
              {{/each}}

            </ul>
        </div>
      </div>



    </div>
  </div>





  <div class="site-section ">
    <div class="container">
      <div class="row mb-5">
        <div class="col-12">
          <h2>Recent Posts</h2>
        </div>
      </div>
      <div class="row">
        {{#each post}}
        <div class="col-lg-4 mb-4">
          <div class="entry2">
            <a href="/post/{{this.id}}"><img src="{{this.postImage}}" alt="Image"
                class="img-fluid postimage rounded"></a>
            <div class="excerpt">
              <span class="post-category text-white bg-success mb-3">{{this.postCategory.categoryName}}</span>

              <h2><a href="/post/{{this.id}}">{{this.postName}}</a></h2>
              <div class="post-meta align-items-center text-left clearfix">
                <figure class="author-figure mb-0 mr-3 float-left"><img src="{{this.postAuthor.profileImage}}"
                    alt="Image" class="img-fluid"></figure>
                <span class="d-inline-block mt-1">By {{this.postAuthor.firstName}} {{this.postAuthor.lastName}}</span>
                <span>{{formatDate this.created_at 'MMMM Do YYYY, h:mm a'}}</span>
              </div>

              <p class="text-nowrap text-truncate" style="width: 5rem;">{{this.postContent}}</p>
              <p><a href="/post/{{this.id}}">Read More</a></p>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="row text-center pt-5 border-top">
        <div class="col-md-12">
          <div class="custom-pagination">
            <span>1</span>
            <a href="#">2</a>
            <a href="#">3</a>
            <a href="#">4</a>
            <span>...</span>
            <a href="#">15</a>
          </div>
        </div>
      </div>
    </div>
  </div>



